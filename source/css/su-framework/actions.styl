action(color1, color2, color3)
  background color1
  background -moz-linear-gradient(top, color1 0%, color2 100%)
  background -webkit-linear-gradient(top, color1 0%, color2 100%)
  background linear-gradient(to bottom, color1 0%, color2 100%)
  filter "progid:DXImageTransform.Microsoft.gradient( startColorstr='%s', endColorstr='%s',GradientType=0 )" % (color1 color2)
  box-shadow 0 1px 2px 0 color3

  &:hover
    color1 = lighten(color1, 10%)
    color2 = lighten(color2, 10%)
    color3 = lighten(color3, 10%)
    background color1
    background -moz-linear-gradient(top, color1 0%, color2 100%)
    background -webkit-linear-gradient(top, color1 0%, color2 100%)
    background linear-gradient(to bottom, color1 0%, color2 100%)
    filter "progid:DXImageTransform.Microsoft.gradient( startColorstr='%s', endColorstr='%s',GradientType=0 )" % (color1 color2)
    box-shadow 0 1px 2px 0 color3

  &:active
    color1 = darken(color1, 10%)
    color2 = darken(color2, 10%)
    color3 = darken(color3, 10%)
    background color1
    background -moz-linear-gradient(top, color1 0%, color2 100%)
    background -webkit-linear-gradient(top, color1 0%, color2 100%)
    background linear-gradient(to bottom, color1 0%, color2 100%)
    filter "progid:DXImageTransform.Microsoft.gradient( startColorstr='%s', endColorstr='%s',GradientType=0 )" % (color1 color2)
    box-shadow 0 1px 2px 0 color3

.su-actions
  padding .5em
  position absolute
  right 0
  top 0

  .su-action
    //color1 = #376eb4
    //color2 = #0e2747
    //color3 = #548fd8
    //color1 = #b3374c
    //color2 = #450e17
    //color3 = #d65469
    color #333
    font-size 12px
    padding .5em 1.5em
    border-radius 3px
    cursor pointer
    user-select none

    action(#f0f6fc, #e1e7ed, #aaaeb3)

    &.primary
      action(#376eb4, #0e2747, #548fd8)
      color #fff

    &.danger
      action(#b3374c, #450e17, #d65469)
      color #fff

    &.arrow-after
      &:after
        content '\25BC'
        display inline-block
        font-size .67em
        margin-left 2px
        transform rotateZ(0) translateY(0)
        transition all .3s ease-in-out
        vertical-align middle

      &.active
        &:after
          transform rotateZ(180deg) translateY(2px)