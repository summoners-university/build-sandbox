.rune-page
    font-size 0

    .available-runes
        display inline-block
        width 300px
        vertical-align top

    .current-runes
        display inline-block
        width 1200px
        vertical-align top

    .col-3
        display inline-block
        width 25%
        vertical-align top

    label
        font-size 18px
        padding 1em
        display inline-block

    .rune
        padding 1em
        border-radius 3px
        font-size 16px
        cursor pointer
        background $grey-2
        margin 1em
        -webkit-user-select none
        -moz-user-select none
        user-select none

        &:hover
            background lighten($grey-2, 20%)

        .name
            font-weight 500
            display block

        .count
            font-weight 200
            display block
            text-align right