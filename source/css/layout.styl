.content-area
    background #000
    display flex
    flex-direction column
    height 100%
    width 100%

.site-header
    background #040507
    border-bottom 1px solid #0C2830
    display block
    padding .5em
    width 100%

    h1
        color #fff
        font-wieght 400
        font-size 18px
        margin-right .5em

    h2
        color #cfba6b
        font-wieght 400
        font-size 16px

.site-main
    display flex
    flex-grow 1
    max-height 800px
    padding .5em
    width 100%

    .flex-center
        display flex
        flex 1

.site-footer
    background #040507
    border-top 1px solid #0C2830
    display block
    padding .5em
    width 100%